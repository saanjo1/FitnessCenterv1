@model AnnouncementsManageViewModel

@{
    if (Model.Id == 0)
    {
        ViewData["Title"] = Translations.AnnouncementAdd;
    }
    else
    {
        ViewData["Title"] = Translations.AnnouncementEdit;
    }
}
<form asp-action="Manage" asp-controller="Announcements" method="post" enctype="multipart/form-data">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <input asp-for="Id" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            <input asp-for="AuthorId" hidden />

            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" placeholder="Title"/>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="@Translations.Description">
            </div>
        </div>
        <div class="card-footer py-3">
            <button type="submit" class="btn btn-primary">@Translations.Submit</button>
        </div>
    </div>
</form>
