@model SupplementIndexViewModel
@{
    ViewData["Title"] = @Translations.Supplements;
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary d-flex justify-content-between align-items-center">
            @ViewData["Title"]
            <a asp-action="Manage" asp-controller="Supplement" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i>
                @Translations.Add
            </a>
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <td>@Translations.Name</td>
                        <td>@Translations.Description</td>
                        <td>@Translations.Price</td>
                        <td>@Translations.Sponsor</td>
                        <th>@Translations.Action</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.supplements.Any())
                    {
                        foreach (var supplement in Model.supplements)
                        {
                            <tr>
                                <td>@supplement.Name</td>
                                <td>@supplement.Description</td>
                                <td>@supplement.Price</td>
                                <td>@supplement.Sponsor.Name</td>
                                <td class="action-column">
                                    <a asp-action="Manage" asp-controller="Supplement" asp-route-id="@supplement.Id"
                               class="btn btn-sm btn-outline-primary">
                                        @Translations.Edit
                                    </a>
                                    <a asp-action="Delete" asp-controller="Supplement" asp-route-id="@supplement.Id"
                               data-toggle="modal" data-target="#confirm-delete" class="btn btn-outline-danger btn-sm ">
                                        @Translations.Delete
                                    </a>
                                    <div class="modal fade" id="confirm-delete"
                                 tabindex="-1" role="dialog" aria-labelledby="modalLabel"
                                 aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="modalLabel">@Translations.AreYouSure</h5>
                                                    <button class="close" type="button" data-dismiss="modal"
                                                    aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">@Translations.DeleteConfirmation</div>
                                                <div class="modal-footer">
                                                    <button class="btn btn-secondary" type="button"
                                                    data-dismiss="modal">
                                                        @Translations.Cancel
                                                    </button>
                                                    <a asp-action="Delete" asp-controller="Supplement"
                                               asp-route-id="@supplement.Id"
                                               class="btn btn-danger">@Translations.Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">@Translations.NoResultsToShow</td>
                        </tr>
                    }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
