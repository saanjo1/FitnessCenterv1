@model SupplementIndexViewModel
@{
    ViewData["Title"] = @Translations.Supplements;
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary d-flex justify-content-between align-items-center">
            @ViewData["Title"]
            <a asp-action="Manage" asp-controller="Supplement" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i>
                @Translations.Add
            </a>
        </h5>
    </div>
    <div class="grid">
        <div class="container" style="display: block">
            <div class="row">
                @if (Model.supplements.Any())
                {

                    foreach (var supplement in Model.supplements)
                    {

                        <div class="product-card">
                            <article class="supplement">
                                    <div class="image"></div>
                                    <div class="info">
                                        <h5 class="title">@supplement.Name</h5>
                                        <div class="description">@supplement.Description</div>
                                        <div class="price">@supplement.Price  KM</div>
                                        <div class="sponsor"> @supplement.Sponsor.Name</div>
                                            <a asp-action="Manage" asp-controller="Supplement" asp-route-id="@supplement.Id">
                                                @Translations.Edit
                                            </a>

                                            <a asp-action="Delete" asp-controller="Supplement" asp-route-id="@supplement.Id">
                                                @Translations.Delete
                                            </a>
                            </article>
                        </div>

                    }

                }
            </div>
        </div>
    </div>
